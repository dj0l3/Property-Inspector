        </LinearLayout>

        <TextView
            android:background="@android:color/darker_gray"
            android:layout_width="match_parent"
            android:layout_height="1dp" />
        <TextView
            android:background="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="1dp" />

    </LinearLayout>

    <!-- </android.support.v7.widget.CardView>-->

</RelativeLayout>